# AIOS v2 Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Security Keys (Generate secure keys for production!)
SECRET_KEY=REPLACE_WITH_SECURE_KEY
JWT_SECRET_KEY=REPLACE_WITH_SECURE_JWT_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Database Configuration
DATABASE_URL=postgresql://user:REPLACE_PASSWORD@localhost:5432/aios_v2
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# LLM Provider Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# Email Configuration (Gmail OAuth)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/gmail/oauth/callback

# WhatsApp Configuration
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# Storage Configuration
STORAGE_TYPE=local  # local, s3, minio
STORAGE_PATH=/app/data
# S3/MinIO Configuration (if using)
S3_BUCKET_NAME=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT_URL=
S3_REGION=us-east-1

# Feature Flags
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_AGENT_BUILDER_ENABLED=true
FEATURE_COLLABORATION_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true

# Monitoring and Analytics
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100  # requests per minute
RATE_LIMIT_BURST=20

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# External Services
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Performance Settings
CACHE_TTL=3600  # seconds
QUERY_TIMEOUT=30  # seconds
REQUEST_TIMEOUT=60  # seconds

# Development Settings
HOT_RELOAD=true
MOCK_EXTERNAL_SERVICES=false