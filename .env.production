# AIOS v2 Production Environment Configuration

# Environment Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Security Keys (Retrieved from secrets manager at runtime)
SECRET_KEY=${PROD_SECRET_KEY}
JWT_SECRET_KEY=${PROD_JWT_SECRET}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=720

# Database Configuration
DATABASE_URL=${PROD_DATABASE_URL}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=${PROD_REDIS_URL}
REDIS_POOL_SIZE=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=16
CORS_ORIGINS=https://aios.example.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.aios.example.com
NEXT_PUBLIC_WS_URL=wss://api.aios.example.com

# Feature Flags
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_AGENT_BUILDER_ENABLED=true
FEATURE_COLLABORATION_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Monitoring and Analytics
SENTRY_DSN=${PROD_SENTRY_DSN}
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=500
RATE_LIMIT_BURST=100

# Performance Settings
CACHE_TTL=14400
QUERY_TIMEOUT=90
REQUEST_TIMEOUT=180

# Development Settings
HOT_RELOAD=false
MOCK_EXTERNAL_SERVICES=false